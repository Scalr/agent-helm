{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "agent": {
            "type": "object",
            "properties": {
                "shutdownMode": {
                    "type": "string",
                    "enum": [
                        "graceful",
                        "force",
                        "drain"
                    ],
                    "default": "graceful",
                    "description": "Shutdown mode for the agent service"
                }
            }
        },
        "terminationGracePeriodSeconds": {
            "type": "integer",
            "minimum": 10,
            "description": "Kubernetes pod termination grace period in seconds."
        }
    }
}
